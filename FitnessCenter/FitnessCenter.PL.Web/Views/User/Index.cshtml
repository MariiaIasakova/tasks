@using FitnessCenter.Shared;
@model List<UserViewModel>

@{
    ViewBag.Title = "Index";
}

<style>
    table th a {
        text-decoration: none;
        color: black;
    }

        table th a:hover {
            text-decoration: none;
            color: black;
        }
</style>

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birthday</th>
            <th>Age</th>
            <th>Subscriptions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Birthdate.ToShortDateString()</td>
                <td>@user.Age</td>
                <td>@user.Subscription</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { UsersId = user.UserId })
                    @Html.ActionLink("Delete", "Delete", new { UsersId = user.UserId })
                </td>
            </tr>
        }
    </tbody>

</table>
